@{
    Layout = null;
}

@model WBK.Models.Create.PageQuestionModel


<div class="motivationQuestion questionDiv">
    <h3 style="float: left;">Vraag @(Model.QuestionId + 1)</h3>
    <div style="float: right;" class="dropleft show">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenu_Page@(Model.PageId)_Question@(Model.QuestionId)" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            =
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
            <a style="color: red;" href="" class="motivationQuestion removeQuestionClass">Vraag verwijderen</a>
        </div>
    </div>
    <input class="form-control" readonly="readonly" id="PagesList_@(Model.PageId)__Questions_@(Model.QuestionId)__Title " name="PagesList[@(Model.PageId)].Questions[@(Model.QuestionId)].Title" type="text" value="Zou u meer willen bewegen en waarom?" />
