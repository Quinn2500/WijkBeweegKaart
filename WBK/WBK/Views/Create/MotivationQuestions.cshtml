    <select class="form-control" readonly="readonly" data-val="true" data-val-required="The Type field is required." id="PagesList_@(Model.PageId)__Questions_@(Model.QuestionId)__Type" name="PagesList[@(Model.PageId)].Questions[@(Model.QuestionId)].Type">
        <option value="0">GeoVraag</option>
        <option value="1">MeerkeuzeVraag</option>
        <option selected="selected" value="2">OpenVraag</option>
        <option value="3">SliderVraag</option>
        <option value="4">NummerVraag</option>
    </select>

    <select class="form-control" readonly="readonly" data-val="true" data-val-required="The Category field is required." id="PagesList_@(Model.PageId)__Questions_@(Model.QuestionId)__Category" name="PagesList[@(Model.PageId)].Questions[@(Model.QuestionId)].Category">
        <option selected="selected" value="0">Profiel</option>
        <option value="1">Locatie</option>
        <option value="2">Gezondheid</option>
    </select>
</div>
